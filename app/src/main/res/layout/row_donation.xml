<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/margin_view_typical">

    <TextView
        android:id="@+id/billing_donation_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_view_typical"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="$20"/>

    <TextView
        android:id="@+id/billing_donation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_view_typical"
        android:layout_marginRight="@dimen/margin_view_typical"
        android:layout_toEndOf="@id/billing_donation_price"
        android:layout_toRightOf="@id/billing_donation_price"
        android:textSize="16sp"
        tools:text="Donation Option"/>

</RelativeLayout>